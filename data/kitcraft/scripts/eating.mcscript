asat('@a') {
  if('entity @s[nbt={SelectedItem:{tag:{kitcraft:{Consumable:1}}}}]') {
    /execute store result score @s kc_pl_sat run data get entity @s foodLevel
  } else {
    /scoreboard players reset @s kc_pl_sat
  }
}

