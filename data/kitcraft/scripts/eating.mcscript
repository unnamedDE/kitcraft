#file: ./eating/sounds

asat(@a) {
  if('entity @s[scores={kc_eattime=5}]' || 'entity @s[scores={kc_eattime=10}]' || 'entity @s[scores={kc_eattime=15}]''entity @s[scores={kc_eattime=20}]' || 'entity @s[scores={kc_eattime=25}]' || 'entity @s[scores={kc_eattime=30}]' || 'entity @s[scores={kc_eattime=35}]') {
    /playsound minecraft:entity.generic.eat player @a[distance=..5]
  } else if('entity @s[scores={kc_eattime=39..}]') {
    /playsound minecraft:entity.player.burp player @a[distance=..5]
  }
}

